{% assign chosen_product = all_products['smoky-embrace-artisan'] %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  id="{{ section.id }}"
  class="section-{{ section.id }}-padding"
  style="background-color: {{ section.settings.background_color }}">
  <div class="page-width">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 items-center">
      <div class="text-center md:px-10">
        <img
          src="https://cdn.shopify.com/s/files/1/0263/8974/1673/files/premium-alternatives_1.svg?v=1758351372"
          alt="Premium Alternatives"
          width="80"
          height="80">
        <h2 class="uppercase text-5xl font-black tracking-wider leading-none text-white my-1">{{ section.settings.title }}</h2>
        <p class="text-2xl md:text-3xl uppercase [font-family:var(--font-heading-family)] font-medium text-[#c8a559] mt-2">{{ section.settings.subtitle }}</p>
        <p class="text-2xl capitalize font-medium text-gray-300 mt-2">
          Same quality, <br> fraction of the price
        </p>
        <div class="mt-8">
          <a href="{{ section.settings.button_link }}" class="inline-block text-midnight bg-skyblue hover:bg-warmAmber transition hover:text-white uppercase font-semibold no-underline px-6 py-3 text-lg rounded-full">GET THE SCENT FOR {{ chosen_product.variants.first.price | money }} <br > (KEEP THE <span class="price_to_modify">$270</span>)</a>
        </div>
      </div>
      <div class="flex justify-center">
        <div class="relative">
          <img
            class="w-full h-auto"
            src="{{ section.settings.image | image_url: width: 700 }}"
            alt="Hero Image"
            width="450"
            height="450">
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Luxury Home Hero",
    "class": "luxury-home-hero",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#fcfbf9"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "review_text",
        "label": "Review Text",
        "default": "LOVED BY 10,000 CUSTOMERS"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Luxury Home Hero"
      }, {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Luxury Home Hero"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "BUY 3 GET 1 FREE - ENDS SOON!"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "text",
        "id": "secondary_button_text",
        "label": "Secondary Button Text",
        "default": "Not sure yet? Explore More â†’"
      }, {
        "type": "url",
        "id": "secondary_button_link",
        "label": "Secondary Button Link"
      }, {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 32
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 32
      }
    ],
    "presets": [
      {
        "name": "Luxury Home Hero"
      }
    ]
  }
{% endschema %}