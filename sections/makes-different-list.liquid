{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  id="{{ section.id }}"
  class="section-{{ section.id }}-padding"
  style="background-color: {{ section.settings.background_color }}">
  <div class="page-width">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-2xl my-0 md:text-5xl font-black  leading-snug text-center">{{ section.settings.makes_diferent_title }}</h2>
        <p class="mt-2 text-center text-midnight uppercase text-2xl">{{ section.settings.makes_diferent_description }}</p>
        <img
          class="lg:hidden w-full h-auto rounded-xl"
          src={{section.settings.makes-different-image | image_url}}
          alt="makes different"
          width="450"
          height="450">
        <ul class="list-none p-0 max-w-[450px] mx-auto space-y-3">
          {% for block in section.blocks %}
            <li class="flex items-center gap-4 bg-black px-4 py-2">
              <img
                src="{{ block.settings.image | image_url: width: 80 }}"
                alt="check"
                width="45"
                height="45">
              <div>
                <h3 class="m-0 text-2xl font-semibold tracking-normal text-white">{{ block.settings.title }}</h3>
                <p class="m-0 text-white tracking-normal">{{ block.settings.description }}</p>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
      <div class="[display:none] lg:[display:block]">
        <img
          class="w-full h-auto rounded-xl"
          src="{{ section.settings.makes-different-image | image_url: width: 700 }}"
          alt="special offer image"
          width="500"
          height="500">
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Makes Different List",
    "class": "makes-different-list",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#FFFFFF"
      },
      {
        "type": "text",
        "id": "makes_diferent_title",
        "label": "Title",
        "default": "What Makes TryScent Different? Everything That Matters."
      },
      {
        "type": "text",
        "id": "makes_diferent_description",
        "label": "Description",
        "default": "CRAFTED WITH PRECISION"
      },
      {
        "type": "image_picker",
        "id": "makes-different-image",
        "label": "Section Image"
      }, {
        "type": "text",
        "id": "makes-different-btn-text",
        "label": "Button Text",
        "default": "Click Here"
      }, {
        "type": "url",
        "id": "makes-different-btn-link",
        "label": "Button Link"
      }, {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 72
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 72
      }
    ],
    "blocks": [
      {
        "type": "list_item",
        "name": "List Item",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, {
            "type": "text",
            "id": "description",
            "label": "Description"
          }, {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Makes Different",
        "blocks": [
          {
            "type": "list_item"
          }
        ]
      }
    ]
  }
{% endschema %}